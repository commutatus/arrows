{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "rootDirs": [ "src" ],
    "target": "es5",
  },
}