{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,    
    "declaration": true,
    "outDir": "./out/",
    "declarationDir": "./types/",
    "paths": {
      "*": [
        "node_modules/*",
        "src/*"
      ]
    },
    "rootDirs": [ "src" ],
    "target": "es5",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}